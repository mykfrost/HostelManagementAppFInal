<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_margin="10sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:padding="10sp"
        android:id="@+id/tvFullName"
        android:text="@string/app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_margin="10sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:padding="10sp"
        android:id="@+id/tvRole"
        android:text="@string/app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_margin="10sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:padding="10sp"
        android:id="@+id/tvEmail"
        android:text="@string/app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_margin="10sp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/btnStudentManagement"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:text="Add Your Details" />
    <Button
        android:layout_margin="10sp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/btnAddrooms"
        android:layout_width="200sp"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:text="Add Room" />



    <Button
        android:layout_margin="10sp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/btnViewHostels"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:text="View Hostels" />

    <Button
        android:visibility="gone"
        android:layout_margin="10sp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/btnAddHostels"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:text="Add Hostel" />

    <Button
        android:layout_margin="10sp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/btnRoomAvailability"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:text="Room Availability" />

    <Button
        android:layout_margin="10sp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/btnBooking"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:text="Booking" />
    <Button
        android:layout_margin="10sp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/btnNFeedbackManagement"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:text="Feedback Management" />
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />


    <Button
        android:layout_margin="10sp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/btnAdminPanel"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Admin Panel"
        android:visibility="gone" />
</LinearLayout>